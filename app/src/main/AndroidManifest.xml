        <meta-data android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyAj0dvvKydVkJtThEdZiIYCqZ1JGXmOLbU" />

        <activity
            android:name="com.oppwa.mobile.connect.checkout.dialog.CheckoutActivity"
            tools:replace="android:theme"
            android:theme="@style/CustomCheckoutTheme"
            android:windowSoftInputMode="adjustResize"
            android:exported="false"
            android:launchMode="singleTop"/>
        <activity android:name="com.pet.web.ViewActivity" />
        <!--        <activity android:name=".ui.address.MapAddressPage" />-->

        <receiver
            android:name="com.pet.payment.receiver.CheckoutBroadcastReceiver"
            android:exported="false" />

        <service
            android:name="com.oppwa.mobile.connect.service.ConnectService"
            android:exported="false"/>

        <service
            android:name=".appointment.GPSTracker"
            android:exported="false"/>

        <uses-library android:name="org.apache.http.legacy" android:required="false" />




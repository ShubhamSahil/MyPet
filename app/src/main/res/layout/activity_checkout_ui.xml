<com.edu.web.ZoomLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.pet.web.ViewActivity"
    android:id="@+id/zoom_linear_layout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <WebView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/webView"
            android:orientation="vertical"
            />

        <RelativeLayout
            android:id="@+id/layout_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/dp30"
                android:layout_height="@dimen/dp30"
                app:cardCornerRadius="8dp"
                android:layout_margin="@dimen/dp10"
                android:elevation="10dp"
                android:layout_alignParentLeft="true"

                app:cardBackgroundColor="@color/textColblack"
                android:alpha="0.8"
                >



                <ImageView
                    android:layout_width="@dimen/dp30"
                    android:layout_height="@dimen/dp30"
                    android:src="@drawable/arrow_back"
                    android:onClick="onback"
                    android:padding="@dimen/dp10"
                    ></ImageView>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/dp30"
                android:layout_height="@dimen/dp30"
                app:cardCornerRadius="8dp"
                android:layout_margin="@dimen/dp10"
                android:elevation="10dp"
                android:layout_alignParentRight="true"
                app:cardBackgroundColor="@color/textColblack"
                android:alpha="0.8">
                <ImageView
                    android:id="@+id/layoutitlethumb"
                    android:layout_width="@dimen/dp30"
                    android:layout_height="@dimen/dp30"

                    android:padding="@dimen/dp10"
                    ></ImageView>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/adViewContainer"
        android:layout_alignParentBottom="true"
        >

    </RelativeLayout>
</com.edu.web.ZoomLinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/toolbar_bg"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
            <ImageView
                android:id="@+id/image_backarrow"
                android:layout_width="@dimen/dp24"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_height="@dimen/dp24"
                android:onClick="imagearrow"
                android:visibility="visible"
                android:src="@drawable/ic_arrow_left"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:id="@+id/text_detail"
                android:fontFamily="@font/tajawal_bold"
                android:text="Address detail"
                android:textSize="@dimen/dp16"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_toRightOf="@id/image_backarrow"
                android:gravity="left"
                android:layout_centerVertical="true"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_gravity="center"/>
        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+ Add a new address >"
        android:textSize="@dimen/dp16"
        android:paddingBottom="@dimen/dp10"
        android:paddingTop="@dimen/dp10"
        android:paddingLeft="@dimen/dp10"
        android:id="@+id/addaddress"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="@font/tajawal_bold"
        android:layout_marginTop="@dimen/dp20"
        android:visibility="gone"
        ></TextView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/dp10"
            android:gravity="top"
            android:layout_gravity="top"
            android:id="@+id/linear_showaddress"

            >




            <LinearLayout
                android:id="@+id/eventslayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.3"
                android:background="#707070"
                android:id="@+id/view"
                android:layout_marginTop="@dimen/dp10"></View>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp10">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Visitor contact"
                        android:textSize="@dimen/dp16"
                        android:paddingTop="@dimen/dp20"
                        android:layout_weight="1"
                        android:textColor="@color/textColblack"
                        android:fontFamily="@font/tajawal_regular"
                        ></TextView>

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:id="@+id/ed_addcontact"
                        android:fontFamily="@font/tajawal_bold"
                        android:textColor="@color/textColblack"
                        android:background="@null"
                        android:gravity="left"
                        android:paddingBottom="@dimen/dp10"
                        android:paddingTop="@dimen/dp10"
                        android:maxLength="10"

                        tools:text="8766266839"/>



                </LinearLayout>
                <TextView
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_height="@dimen/dp80"
                    android:layout_weight="0.2"
                    android:textColor="#707070"
                    android:text="|"></TextView>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Post code"
                        android:textSize="@dimen/dp18"
                        android:paddingTop="@dimen/dp20"
                        android:layout_weight="1"
                        android:textColor="@color/textColblack"
                        android:fontFamily="@font/tajawal_regular"
                        ></TextView>

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:id="@+id/ed_addpostcode"
                        android:fontFamily="@font/tajawal_bold"
                        android:textColor="@color/textColblack"
                        android:background="@null"
                        android:gravity="left"
                        android:paddingBottom="@dimen/dp10"
                        android:paddingTop="@dimen/dp10"
                        android:enabled="false"
                        tools:text="@string/menu_address"
                        android:textSize="@dimen/dp18"
                        />


                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="I need change visitor address detail >"
                android:textSize="@dimen/dp18"
                android:paddingBottom="@dimen/dp10"
                android:paddingTop="@dimen/dp10"
                android:id="@+id/editaddress"
                android:layout_weight="1"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="@font/tajawal_bold"
                ></TextView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.3"
                android:background="#707070"
                android:layout_marginTop="@dimen/dp10"></View>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp10">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/contact_details"
                    android:textSize="@dimen/dp20"
                    android:paddingTop="@dimen/dp20"
                    android:layout_weight="1"
                    android:textColor="@color/textColblack"
                    android:fontFamily="@font/tajawal_regular"
                    ></TextView>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email Id :"
                    android:textSize="@dimen/dp18"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:layout_weight="1"
                    android:textColor="@color/textColblack"
                    android:fontFamily="@font/tajawal_regular"
                    android:layout_marginTop="@dimen/dp10"
                    ></TextView>


                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:id="@+id/ed_addemail"
                    android:layout_weight="1"
                    android:fontFamily="@font/tajawal_bold"
                    android:textColor="@color/textColblack"
                    android:background="@null"
                    android:gravity="left"
                    tools:text="House"
                    android:textSize="@dimen/dp18"

                    />




                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="House No./Flat/Building :"
                    android:textSize="@dimen/dp18"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:layout_weight="1"
                    android:textColor="@color/textColblack"
                    android:fontFamily="@font/tajawal_regular"
                    android:layout_marginTop="@dimen/dp10"
                    ></TextView>


                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:id="@+id/ed_addhouse"
                    android:layout_weight="1"
                    android:fontFamily="@font/tajawal_bold"
                    android:textColor="@color/textColblack"
                    android:background="@null"
                    android:gravity="left"
                    android:text="House"
                    android:editable="false"
                    android:textSize="@dimen/dp18"

                    />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Colony/Street:"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:layout_weight="1"
                    android:textColor="@color/textColblack"
                    android:fontFamily="@font/tajawal_regular"
                    android:textSize="@dimen/dp18"

                    ></TextView>


                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:id="@+id/ed_addcolony"
                    android:layout_weight="1"
                    android:fontFamily="@font/tajawal_bold"
                    android:textColor="@color/textColblack"
                    android:background="@null"
                    android:gravity="left"
                    android:text="Colony"
                    android:editable="false"
                    android:textSize="@dimen/dp18"

                    />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="State/Delhi:"
                    android:textSize="@dimen/dp18"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:layout_weight="1"
                    android:textColor="@color/textColblack"
                    android:fontFamily="@font/tajawal_regular"
                    ></TextView>


                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:id="@+id/ed_addstate"
                    android:layout_weight="1"
                    android:fontFamily="@font/tajawal_bold"
                    android:textColor="@color/textColblack"
                    android:background="@null"
                    android:gravity="left"
                    android:text="State"
                    android:editable="false"
                    android:textSize="@dimen/dp18"

                    />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Landmark:"
                    android:textSize="@dimen/dp18"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:layout_weight="1"
                    android:textColor="@color/textColblack"
                    android:fontFamily="@font/tajawal_regular"
                    ></TextView>


                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:id="@+id/ed_addlandmark"
                    android:layout_weight="1"
                    android:fontFamily="@font/tajawal_bold"
                    android:textColor="@color/textColblack"
                    android:background="@null"
                    android:gravity="left"
                    android:text="State"
                    android:editable="false"
                    android:textSize="@dimen/dp18"
                    />




<!--
                    <fragment
                        android:id="@+id/googleMap"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        class="com.google.android.gms.maps.Supp"
                        android:layout_above="@+id/latlongLocation" />
-->




            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>
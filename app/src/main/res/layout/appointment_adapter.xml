<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/adapter"
    android:layout_gravity="left"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout
        android:id="@+id/view_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:visibility="gone">

        <ImageView
            android:id="@+id/delete_icon"
            android:layout_width="@dimen/dp24"
            android:layout_height="@dimen/dp24"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp10"
            android:src="@android:drawable/ic_delete" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp10"
            android:layout_toLeftOf="@id/delete_icon"
            android:text="@string/delete"
            android:textColor="#fff"
            android:textSize="13dp" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/view_foreground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="@dimen/dp10"
        android:layout_above="@+id/view"
        >
        <LinearLayout
            android:id="@+id/eventslayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/dp80"
                android:layout_height="@dimen/dp80"
                android:background="@null"
                android:id="@+id/image1"
                android:src="@drawable/appnewicons"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="@dimen/dp130"
                android:background="@null"
                android:layout_gravity="center"
                android:layout_alignParentLeft="true"
                android:id="@+id/image1_circle"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_marginLeft="@dimen/dp20"
                android:gravity="center"
                android:layout_weight="1.8"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/tajawal_bold"
                    android:textColor="@color/textColblack"
                    android:textSize="@dimen/dp14"
                    tools:text="Title"

                    />
                <TextView
                    android:id="@+id/text_subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="SubTitlejbnbdjsbjfbjshjbvsjbv jshgjfjshfsjhfbsjhbfjshfjssjhfsbhsj"
                    android:textSize="@dimen/dp12"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:fontFamily="@font/tajawal_regular"
                    android:textColor="@color/textColblack"

                    />


                <TextView
                    android:id="@+id/text_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="SubTitlejbnbdjsbjfbjshjbvsjbv"
                    android:textSize="@dimen/dp12"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:fontFamily="@font/tajawal_light"
                    android:textColor="@color/textColblack"

                    />



            </LinearLayout>


            <ImageView
                android:layout_width="0dp"
                android:layout_weight=".2"
                android:layout_height="@dimen/dp40"
                android:layout_gravity="center|right"
                android:src="@drawable/rightarrow"
                android:layout_centerVertical="true"
                android:padding="@dimen/dp10"
                android:tint="@color/colorPrimaryDark"
                android:layout_alignParentRight="true"
                android:id="@+id/right_image"
                />


        </LinearLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/dp1"
        android:alpha="0.2"
        android:background="#707070"
        android:id="@+id/view"></View>


</LinearLayout>

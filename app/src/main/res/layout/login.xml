<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundgradient"
    android:gravity="center"
    >


    <ImageView
        android:layout_width="@dimen/dp140"
        android:layout_centerHorizontal="true"
        android:visibility="visible"
        android:layout_height="@dimen/dp140"
        android:id="@+id/top_image"
        android:src="@drawable/appnewicons"
        android:layout_marginTop="@dimen/dp20"></ImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="@dimen/dp20"
        android:paddingBottom="@dimen/dp10"
        android:paddingTop="@dimen/dp10"
        android:visibility="gone"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="@color/textColblack"
        android:fontFamily="@font/playfairdisplayregular"
        ></TextView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        android:layout_marginLeft="@dimen/dp20"
        android:layout_marginRight="@dimen/dp20"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="@dimen/dp6"
        android:layout_below="@+id/top_image"
     >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/linearsigninscreen"
        android:layout_width="match_parent"
        android:padding="@dimen/dp20"
        android:visibility="visible"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign in to start your session"
            android:textSize="@dimen/dp14"
            android:paddingBottom="@dimen/dp10"
            android:paddingTop="@dimen/dp10"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="@font/tajawal_light"
            ></TextView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mobile number"
            android:textSize="@dimen/dp20"
            android:paddingBottom="@dimen/dp10"
            android:paddingTop="@dimen/dp20"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="@font/tajawal_regular"
            ></TextView>


        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp10"
            android:hint="Mobile number (EX. 054XXXXXXX)">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:id="@+id/ed_mobilesignin"
                android:drawablePadding="4dp"
                android:maxLength="10"
                android:fontFamily="@font/tajawal_regular"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="@dimen/dp20"
            android:paddingBottom="@dimen/dp10"
            android:paddingTop="@dimen/dp20"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="@font/tajawal_regular"
            ></TextView>




            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp10"
                android:hint="Enter password"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/colorPrimary">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:id="@+id/ed_passwordsignin"
                    android:drawablePadding="4dp"
                    android:fontFamily="@font/tajawal_regular"/>

            </com.google.android.material.textfield.TextInputLayout>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:textSize="@dimen/dp20"
            android:layout_marginTop="@dimen/dp10"
            android:padding="@dimen/dp10"
            android:onClick="textsigninaccount"
            android:id="@+id/text_signin"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:fontFamily="@font/tajawal_bold"
            android:background="@color/colorPrimary"
            ></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trouble logging in?"
            android:textSize="@dimen/dp12"
            android:layout_marginTop="@dimen/dp10"
            android:onClick="texttrouble"
            android:visibility="visible"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/ColorTextGrey"
            android:fontFamily="@font/playfairdisplayregular"
            ></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Don't have an account? SignUP"
            android:textSize="@dimen/dp12"
            android:layout_marginTop="@dimen/dp10"
            android:padding="@dimen/dp10"
            android:onClick="texttsignup"
            android:visibility="visible"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/ColorTextGrey"
            android:fontFamily="@font/playfairdisplayregular"
            ></TextView>


    </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

</RelativeLayout>
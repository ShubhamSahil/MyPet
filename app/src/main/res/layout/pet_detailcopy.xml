<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimaryDark"
        android:padding="@dimen/dp10"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
            <ImageView
                android:id="@+id/image_backarrow"
                android:layout_width="@dimen/dp24"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_height="@dimen/dp24"
                android:onClick="imagearrow"
                android:visibility="visible"
                android:src="@drawable/ic_arrow_left"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:id="@+id/text_detail"
                android:fontFamily="@font/tajawal_bold"
                android:text="Pet Details"
                android:textSize="@dimen/dp16"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_toRightOf="@id/image_backarrow"
                android:gravity="left"
                android:layout_centerVertical="true"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_gravity="center"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp60"
                android:background="@null"
                android:layout_gravity="center"
                android:id="@+id/image_delete"
                android:src="@android:drawable/ic_menu_delete"
                android:tint="@color/textColblack"
                android:layout_alignParentRight="true"
                />



        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dp10"
>

    <LinearLayout
        android:id="@+id/eventslayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"


        android:weightSum="2">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="@dimen/dp80"
            android:background="@null"
            android:layout_gravity="center"
            android:layout_alignParentLeft="true"
            android:id="@+id/pimage"
            />

        <TextView
            android:id="@+id/pname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/tajawal_bold"
            android:textColor="@color/textColblack"
            android:textSize="@dimen/dp14"
            android:layout_weight="1.5"
            tools:text="Title"

            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:alpha="0.2"
        android:background="#707070"
        android:id="@+id/view"></View>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/tajawal_light"
        android:textColor="@color/textColblack"
        android:textSize="@dimen/dp14"
        android:padding="@dimen/dp10"
        tools:text="Pet Basic Details"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Patient species :"
        android:textSize="@dimen/dp16"
        android:paddingBottom="@dimen/dp10"
        android:paddingTop="@dimen/dp20"
        android:textColor="@color/colorPrimary"
        android:fontFamily="@font/tajawal_bold"
        ></TextView>


    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:id="@+id/ed_pspecies"
            android:fontFamily="@font/tajawal_regular"/>

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Patient Breed :"
        android:textSize="@dimen/dp16"
        android:paddingBottom="@dimen/dp10"
        android:paddingTop="@dimen/dp20"
        android:textColor="@color/colorPrimary"
        android:fontFamily="@font/tajawal_bold"
        ></TextView>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:id="@+id/ed_pbreed"
            android:fontFamily="@font/tajawal_regular"/>

    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Patient Color :"
        android:textSize="@dimen/dp16"
        android:paddingBottom="@dimen/dp10"
        android:paddingTop="@dimen/dp20"
        android:textColor="@color/colorPrimary"
        android:fontFamily="@font/tajawal_bold"
        ></TextView>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:hint="">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:id="@+id/ed_pcolor"
            android:fontFamily="@font/tajawal_regular"/>

    </com.google.android.material.textfield.TextInputLayout>




    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Patient Sex :"
        android:textSize="@dimen/dp16"
        android:paddingBottom="@dimen/dp10"
        android:paddingTop="@dimen/dp20"
        android:textColor="@color/colorPrimary"
        android:fontFamily="@font/tajawal_bold"
        ></TextView>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:id="@+id/ed_psex"
            android:fontFamily="@font/tajawal_regular"/>

    </com.google.android.material.textfield.TextInputLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:alpha="0.2"
        android:background="#707070"
        ></View>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/tajawal_light"
        android:textColor="@color/textColblack"
        android:textSize="@dimen/dp14"
        android:padding="@dimen/dp10"
        tools:text="Other Details"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Patient Weight :"
        android:textSize="@dimen/dp16"
        android:paddingBottom="@dimen/dp10"
        android:paddingTop="@dimen/dp20"
        android:textColor="@color/colorPrimary"
        android:fontFamily="@font/tajawal_bold"
        ></TextView>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Patient Weight">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:id="@+id/ed_pweight"
            android:fontFamily="@font/tajawal_regular"/>

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Patient date of birth :"
        android:textSize="@dimen/dp16"
        android:paddingBottom="@dimen/dp10"
        android:paddingTop="@dimen/dp20"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="@font/tajawal_bold"
        ></TextView>


    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter DOB">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edpdob"
            android:inputType="text"/>

    </com.google.android.material.textfield.TextInputLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Microchip :"
        android:textSize="@dimen/dp16"
        android:paddingBottom="@dimen/dp10"
        android:paddingTop="@dimen/dp20"
        android:textColor="@color/colorPrimary"
        android:fontFamily="@font/tajawal_bold"
        ></TextView>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Microchip">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:id="@+id/ed_pmicrochip"
            android:fontFamily="@font/tajawal_regular"/>

    </com.google.android.material.textfield.TextInputLayout>


</LinearLayout>
    </ScrollView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="@dimen/dp10"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="@dimen/dp20"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About Elite Taxi"
            android:padding="@dimen/dp10"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="@font/tajawal_bold"
            android:layout_gravity="center"
            android:textSize="@dimen/dp16"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Happy to simplify the taxi booking process: theyâ€™ll no longer need to waste time on dispatcher calls (or stand in the street trying to catch a car).mobile booking taxi application service depends on the continued use of its passengers."
            android:padding="@dimen/dp10"
            android:textColor="@color/textColblack"
            android:fontFamily="@font/tajawal_regular"
            android:layout_gravity="center"
            android:textSize="@dimen/dp14"></TextView>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dp10"
            android:layout_marginTop="@dimen/dp10"
            android:weightSum="2"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/dp30"
            android:layout_marginRight="@dimen/dp30">


            <Button
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="wrap_content"
                android:text="Book"
                android:textSize="@dimen/dp14"
                android:fontFamily="@font/tajawal_bold"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:id="@+id/btn_book"

                ></Button>
            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"></Space>
            <Button
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="wrap_content"
                android:text="Later"
                android:textSize="@dimen/dp14"
                android:fontFamily="@font/tajawal_bold"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/white"
                android:id="@+id/btn_later"
                android:textAllCaps="false"
                ></Button>



        </LinearLayout>


    </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundgradient"
    >


    <ImageView
        android:layout_width="@dimen/dp160"
        android:layout_centerHorizontal="true"
        android:visibility="visible"
        android:layout_height="@dimen/dp160"
        android:padding="@dimen/dp10"
        android:layout_marginTop="@dimen/dp20"
        android:src="@drawable/appnewicons"
        android:scaleType="centerCrop"></ImageView>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="@dimen/dp20"
        android:paddingBottom="@dimen/dp10"
        android:paddingTop="@dimen/dp10"
        android:visibility="gone"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="@color/textColblack"
        android:fontFamily="@font/playfairdisplayregular"
        ></TextView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        android:layout_marginLeft="@dimen/dp20"
        android:layout_marginRight="@dimen/dp20"
        android:layout_marginTop="@dimen/dp20"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="@dimen/dp10"
        android:layout_centerInParent="true">
        <LinearLayout
            android:id="@+id/linearsigninscreen"
            android:layout_width="match_parent"
            android:padding="@dimen/dp20"
            android:visibility="visible"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reset Password"
                android:textSize="@dimen/dp18"
                android:paddingBottom="@dimen/dp10"
                android:paddingTop="@dimen/dp10"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="@font/tajawal_bold"
                ></TextView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Password"
                android:textSize="@dimen/dp14"
                android:paddingBottom="@dimen/dp10"
                android:paddingTop="@dimen/dp20"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/tajawal_regular"
                ></TextView>


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp10"
                android:hint="New password"
                app:passwordToggleEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:id="@+id/ed_npswd"
                    android:drawableLeft="@drawable/two"
                    android:drawablePadding="4dp"
                    android:fontFamily="@font/tajawal_regular"/>

            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirm Password"
                android:textSize="@dimen/dp14"
                android:paddingBottom="@dimen/dp10"
                android:paddingTop="@dimen/dp20"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/tajawal_regular"
                ></TextView>


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp10"
                android:hint="Confirm password"
                app:passwordToggleEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:id="@+id/ed_cpswd"
                    android:drawableLeft="@drawable/two"
                    android:drawablePadding="4dp"
                    android:fontFamily="@font/tajawal_regular"/>

            </com.google.android.material.textfield.TextInputLayout>











            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reset"
                android:textSize="@dimen/dp20"
                android:layout_marginTop="@dimen/dp20"
                android:padding="@dimen/dp10"
                android:onClick="textreset"
                android:id="@+id/text_reset"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:fontFamily="@font/tajawal_bold"
                android:background="@color/colorPrimary"
                ></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trouble logging in?"
                android:textSize="@dimen/dp12"
                android:layout_marginTop="@dimen/dp10"
                android:visibility="gone"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/ColorTextGrey"
                android:fontFamily="@font/playfairdisplayregular"
                ></TextView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>